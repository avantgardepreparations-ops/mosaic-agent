# Environment variables for Mosaic Agent
# Copy this file to .env and modify as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# AI Tool URLs
OLLAMA_URL=http://localhost:11434
CHROMADB_URL=http://localhost:8000

# Ports Configuration
JUPYTER_PORT=8888
BACKEND_PORT=5000

# Paths
WHISPER_MODEL_PATH=./models/ggml-base.bin
MODELS_DIR=./models
DATA_DIR=./data

# MacBook Pro 2015 Optimizations
MAX_MODEL_SIZE=4B
USE_QUANTIZED_MODELS=true
CPU_THREADS=4
MEMORY_LIMIT=6GB

# Optional: Cloud API Keys (if using hybrid approach)
# OPENAI_API_KEY=your_key_here
# HUGGINGFACE_API_KEY=your_key_here