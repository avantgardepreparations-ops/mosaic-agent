# Server Configuration
PORT=3001
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,text/html,application/javascript,application/json

# Database Configuration
DB_PATH=./data/files.db

# Terminal Configuration
TERMINAL_TIMEOUT=30000
MAX_COMMAND_HISTORY=1000
ALLOWED_WORKING_DIRS=./,./uploads,./project

# Security Configuration
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-secret-key-change-in-production

# Platform Specific Settings (Auto-detected)
# PLATFORM=darwin|linux|android
# IS_TERMUX=false

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log